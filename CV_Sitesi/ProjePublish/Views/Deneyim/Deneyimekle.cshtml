@model CV_Sitesi.Models.Entity.TblDeneyimlerim
@{
    ViewBag.Title = "Deneyimekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Yeni Deneyim Ekleme Sayfasi</h4>
<br />
<form class="form-group" method="post">
    <input type="text" name="Baslik" class="form-control" placeholder="Basligi Yaziniz..." />
    @Html.ValidationMessageFor(x => x.Baslik, "", new { style = "color:red" })
    <br />
    <input type="text" name="Altbaslik" class="form-control" placeholder="Altbasligi yaziniz..." />
    <br />
    <input type="text" name="Tarih" class="form-control" placeholder="Tarihi giriniz..." />
    <br />
    <textarea placeholder="Aciklama Giriniz..." class="form-control" name="Aciklama" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
