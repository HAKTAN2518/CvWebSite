
@using CV_Sitesi.Models.Entity
@model List<TblDeneyimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyimlerim Sayfasi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Baslik</th>
        <th>Altbaslik</th>
        <th>Tarih</th>
        <th>Duzenle</th>
        <th>Sil</th>
    </tr>
    
        @foreach (var item in Model)
        {
<tr>
    <td>@item.ID</td>
    <td>@item.Baslik</td>
    <td>@item.Altbaslik</td>
    <td>@item.Tarih</td>
    <td><a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-success">Duzenle</a></td>
    <td><a href="/Deneyim/DeneyimSil/@item.ID" class=" btn btn-danger">Sil</a></td>


</tr>
        }
</table>
<a href="/Deneyim/Deneyimekle/" class="btn btn-primary">Yeni Deneyim Ekle</a>

