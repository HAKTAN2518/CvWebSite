@using CV_Sitesi.Models.Entity
@model List<TblSertifkalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">


                                                <div class="timeline-body">
                                                    @item.Aciklma
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifkalar/SertifkaDuzenle/@item.ID" class="btn btn-primary btn-sm">Duzenle</a>
                                                    <a href="/Sertifkalar/SertifkaSil/@item.ID" class="btn btn-danger btn-sm">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                                 <a href="/Sertifkalar/SertifkaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                            </div>
                        </div>
                    </div>
                    
                </div>
                
            </div>
        </div>
    </section>
</body>
</html>

